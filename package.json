{
  "name": "min-bounding-rectangle",
  "version": "1.2.1",
  "type": "module",
  "main": "dist/min-bounding-rectangle.umd.js",
  "module": "dist/min-bounding-rectangle.es.js",
  "types": "dist/min-bounding-rectangle.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/min-bounding-rectangle.d.ts",
      "import": "./dist/min-bounding-rectangle.es.js",
      "require": "./dist/min-bounding-rectangle.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:size": "npm run build && size-limit",
    "publisher": "vitest run && npm run build && npm publish",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mahetoodang/min-bounding-rectangle.git"
  },
  "author": "Herman Aadamsoo",
  "license": "MIT",
  "keywords": [
    "bounding box",
    "bounding rectangle",
    "min bounding rectangle",
    "minimum bounding rectangle",
    "minimal bounding rectangle",
    "bbox",
    "mbr",
    "geometry",
    "spatial",
    "geospatial",
    "gis",
    "computational geometry",
    "collision detection",
    "shape analysis",
    "2d",
    "polygon",
    "envelope",
    "extent"
  ],
  "bugs": {
    "url": "https://github.com/mahetoodang/min-bounding-rectangle/issues"
  },
  "homepage": "https://github.com/mahetoodang/min-bounding-rectangle#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "concaveman": "^2.0.0",
    "mathjs": "^14.6.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/concaveman": "^1.1.6",
    "@vitest/coverage-v8": "^3.2.4",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-compression2": "^2.2.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "size-limit": [
    {
      "name": "ESM Bundle",
      "path": "dist/min-bounding-rectangle.es.js",
      "limit": "60 KB",
      "gzip": true
    },
    {
      "name": "UMD Bundle",
      "path": "dist/min-bounding-rectangle.umd.js",
      "limit": "60 KB",
      "gzip": true
    }
  ]
}
